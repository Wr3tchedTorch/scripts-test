{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ], // Incluindo todos os arquivos TypeScript
  "exclude": [
    "node_modules"
  ]
}